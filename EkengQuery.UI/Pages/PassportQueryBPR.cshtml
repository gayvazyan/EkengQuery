@page "/PassportQueryBPR"
@model EkengQuery.UI.Pages.PassportQueryBPRModel
@{
    <form method="post" enctype="multipart/form-data">
        <div class="card-header">
            <h5> Մուտքագրեք ԱՀՓ համարը</h5>
            <div class="card-header-actions">
                <a class="card-header-action btn-minimize" href="#" data-toggle="collapse" data-target="#collapseSearch" aria-expanded="true">
                    <i class="icon-arrow-up"></i>
                </a>
            </div>
        </div>
        <div class="card">
            <div class="card-body row">
                <div class="m-3 p-3 w-100">
                    <div class="row margin-top-20">

                        <div class="col-9">
                            <input class="form-control" type="text" asp-for="@Model.Passport" placeholder="ա.հ.փ.">
                            <span asp-validation-for="@Model.Passport" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <a class="btn btn-danger text-white" onclick="Reset()">Մաքրել</a>
                            <button class="btn btn-primary text-white"><i class="cil-sync"></i> Որոնել</button>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>


        @if (Model.Citizen != null && !String.IsNullOrEmpty(Model.Passport))
        {
            <div class="row margin-top-20">
                <div class="col-12">
                    <center>
                        <h5> Տվյալները որը ստացվում է ԲՊՌ սերվերից </h5>
                    </center>
                </div>
                <div class="col-12">
                    <center>
                        <h3 style="color:green">  Անձնագիրը:  @Model.Passport</h3>
                    </center>
                    <center>
                        <h3 style="color:green"> Ամբողջական Անունը:  @Model.Citizen.Full_name  </h3>
                    </center>
                    <center>
                        <h3 style="color:green"> ՀԾՀ:  @Model.Citizen.PNum </h3>
                    </center>
                    <center>
                        <h3 style="color:green">Հաշվառման հասցեն:  @Model.Citizen.AVVRegistrationAddress</h3>
                    </center>
                </div>
            </div>
        }

        else
        {
            <div class="row margin-top-20">
                <div class="col-12">
                    <center>
                        <h5 style="color:red">  @Model.Citizen.ErrorMessage </h5>
                    </center>
                </div>
            </div>
        }

        @section scripts{
            <script>
                function Reset() {
                    $("#Passport").val(null);
                    $("form").submit();
                }
            </script>
        }
    </form>
}




